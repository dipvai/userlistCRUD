<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login page</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-image: url(https://i.pinimg.com/originals/24/de/f9/24def9c8cdb09f72e37f9a54703d744f.jpg);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }

      .container {
        background-color: #fff;
        opacity: 0.9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        padding: 20px;
        border-radius: 5px;
        text-align: left;
        overflow-y: scroll;
        max-height: 600px;
        max-width: 800px;
        margin: 0 auto;
      }

      form {
        display: inline-block;
        grid-gap: 10px;
        margin-right: 20px;
      }

      .date-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      label {
        font-weight: bold;
        margin-top: 5px;
      }

      input[type="text"],
      input[type="email"],
      input[type="password"],
      select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin: 5px 0;
      }

      select {
        appearance: none;
        padding: 10px;
      }

      button[type="submit"] {
        background-color: #333;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      button[type="submit"]:hover {
        background-color: #555;
      }

      a {
        display: block;
        text-align: center;
        margin-top: 10px;
        text-decoration: none;
        color: #333;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <form action="/signup/" method="POST">
        <label for="firstName">First Name</label>
        <input type="text" name="firstName" id="" />
        <label for="lastName">Last Name</label>
        <input type="text" name="lastName" id="" />
        <label for="dateOfBirth"> Date of Birth </label>
        <input class="date-input" type="date" name="dateOfBirth" id="" />
        <label for="file">Photo</label><br>
        <input type="file" id="myFile" name="filename" id="" /><br>
        <label for="class">Class</label>
        <input type="text" name="class" id="" />
        <label for="address">Address</label>
        <input type="text" name="address" id="" />
        <label for="state">State</label>
        <input type="text" name="state" id="" />
        <label for="country">Country</label>
        <input type="text" name="country" id="" />
        <label for="gender">Gender</label>
        <select name="gender" id="">
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>
        </select>
        <label for="email">Email: </label>
        <input
          type="email"
          name="email"
          id=""
          placeholder="example@email.com"
          required
        />
        <label for="password">Password: </label>
        <input type="password" name="password" id="" placeholder="" required />
        <button type="submit">Submit</button>
      </form>
      <div class="login">
        <a href="http://localhost:3000/">Or already have an account?</a>
      </div>
    </div>
  </body>
</html>
